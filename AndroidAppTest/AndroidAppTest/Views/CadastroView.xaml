<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidAppTest.Views.CadastroView">
  <ContentPage.Content>
    <StackLayout Padding="10">
      <Label Text="Digite seu nome :" TextColor="Black"/>
      <Entry Text="{Binding Nome}"/>
      <Label Text="Digite seu Sobrenome :" TextColor="Black"/>
      <Entry Text="{Binding Sobrenome}"/>
      <Label Text="Digite seu E-mail :" TextColor="Black"/>
      <Entry Text="{Binding Email}"/>
      <Label Text="Digite sua Idade :" TextColor="Black"/>
      <Entry Text="{Binding Idade}"/>
      <Button Text="Cadastrar" Command="{Binding CadastrarCommand}"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>